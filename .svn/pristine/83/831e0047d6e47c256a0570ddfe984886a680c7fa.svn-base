@model IEnumerable<Plus54PortfolioRedesign2014.Web.Admin.Models.SocialMediaModel>
@{
    ViewBag.Title = "Social Media";
    Layout = "~/Areas/Admin/Views/Shared/_emptyLayout.cshtml";
    var entityName = "Social Media";
    var tab1Title = string.Format("List {0}", entityName);
    var tab2Title = string.Format("Add/Edit {0}", entityName);
}
@section MainContent{
    <h2>@ViewBag.Title</h2>
    <p>
        <a href="#addedit" role="button" data-toggle="modal" class="btn btn-inverse" onclick="javascript:reloadCreate(); return false;">Add New</a>
        <a href="#bulkDelete" role="button" data-toggle="modal" class="btn btn-delete btn-inverse btn-toogle hide"
            onclick="javascript:bulkDelete('tblSocialMedia', 'SocialMedia'); return false;">Delete</a>
    </p>
    <table cellpadding="0" cellspacing="0" border="0" class="display" id="tblSocialMedia">
        <thead>
        </thead>
        <tbody>
        </tbody>
    </table>
}
@section JavaScript
{
    <script type="text/javascript">
        $(document).ready(function () {

            initPages('SocialMedia', '@entityName', '@tab1Title', '@tab2Title');
            Reload();
        });

        var columns = [
                { "sTitle": "<input type='checkbox' name='selectAll' id='selectAll' onclick='javascript:selectAllAjax(\"tblSocialMedia\");' />", "bSortable": false, "sWidth": "35px", "bSearchable": false },
                { "sTitle": 'Name', "bSortable": true },
                { "sTitle": 'Thumbnail', "bSortable": false }
        ]

        function Reload() {
            loadTableContentAjax("tblSocialMedia", "/Admin/SocialMedia/GetAll", columns);
        }

    </script>
}